<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:HelloMauiApp.Helpers;assembly=HelloMauiApp"
             x:Class="HelloMauiApp.NoConnectionPlug"
             x:Name="this"
             Margin="0"
             Padding="0"
             VerticalOptions="CenterAndExpand"
             HorizontalOptions="FillAndExpand"
             BackgroundColor="{x:Static helpers:ColorsHelper.WhiteTransparentBackgroundColor}"
             RowDefinitions="*,Auto,Auto,*">
    <Image Source="{Binding ImageSource, Source={x:Reference this}}"
           Grid.Row="1"
                   Opacity=".7"
                   Margin="0,10,0,20"
                   HeightRequest="100"
                   WidthRequest="100"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

    <Label Text="No internet connection..."
           Grid.Row="2"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Center"
                   BackgroundColor="{x:Static helpers:ColorsHelper.BackgroundGrayColor}"
                   Padding="5"
                   FontSize="14"
                   Margin="0"/>
</Grid>